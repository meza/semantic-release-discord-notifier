{
  "name": "semantic-release-discord-notifier",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      },
      "require": {
        "import": "./dist/index.cjs",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "lint:ci": "biome ci --reporter=github .",
    "lint": "tsc --noEmit",
    "test": "vitest --coverage"
  },
  "repository": {
    "url": "git+https://github.com/meza/semantic-release-discord-notifier"
  },
  "keywords": ["semantic-release", "discord"],
  "author": "Meza",
  "license": "GPL-3.0",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@commitlint/prompt-cli": "19.6.1",
    "@meza/biome": "^1.1.0",
    "@meza/tsconfig-base": "^1.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.2",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "2.1.8",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "is-ci": "^4.1.0",
    "lefthook": "1.10.1",
    "pnpm": "*",
    "publint": "^0.2.12",
    "semantic-release-export-data": "^1.1.0",
    "tsup": "^8.3.5",
    "tsx": "4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public",
    "ignore": ["!dist/", "tsconfig*"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "header-max-length": [0, "always", 100]
    }
  },
  "dependencies": {
    "semantic-release": "^24.2.0"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "treeshake": true,
    "format": ["cjs", "esm"]
  }
}
