{
  "name": "semantic-release-discord-notifier",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      },
      "require": {
        "import": "./dist/index.cjs",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "lint:ci": "biome ci --reporter=github .",
    "lint:types": "tsc --noEmit",
    "lint:package": "publint",
    "lint": "run-s lint:ci lint:types lint:package",
    "lint:fix": "biome check --fix",
    "release": "semantic-release",
    "test": "vitest --coverage"
  },
  "repository": "git+https://github.com/meza/semantic-release-discord-notifier.git",
  "keywords": [
    "semantic-release",
    "discord"
  ],
  "author": "Meza",
  "license": "GPL-3.0",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/prompt-cli": "20.1.0",
    "@meza/biome": "1.1.1",
    "@meza/tsconfig-base": "1.1.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.2",
    "@semantic-release/npm": "13.1.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/micromatch": "^4.0.10",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "3.2.4",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "is-ci": "4.1.0",
    "lefthook": "2.0.4",
    "npm-run-all2": "8.0.4",
    "pnpm": "10.24.0",
    "publint": "0.3.15",
    "semantic-release-export-data": "1.2.0",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "dependencies": {
    "micromatch": "4.0.8",
    "semantic-release": "25.0.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "treeshake": true,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
